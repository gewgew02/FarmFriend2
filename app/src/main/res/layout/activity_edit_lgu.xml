    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="142dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.210" />

    <EditText
        android:id="@+id/LGUFirstName"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="First Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView37"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/LGUContactNum"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Mobile Number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGUAddress"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/LGUCategory"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGULastName"
        app:layout_constraintVertical_bias="0.033" />

    <EditText
        android:id="@+id/LGUAddress"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGUCategory"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/LGUPassword"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGUContactNum"
        app:layout_constraintVertical_bias="0.055" />

    <EditText
        android:id="@+id/LGULastName"
        android:layout_width="258dp"
        android:layout_height="46dp"
        android:hint="Last Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGUFirstName"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/buttonSaveEditLGU"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LGUPassword"
        app:layout_constraintVertical_bias="0.358" />

</androidx.constraintlayout.widget.ConstraintLayout>